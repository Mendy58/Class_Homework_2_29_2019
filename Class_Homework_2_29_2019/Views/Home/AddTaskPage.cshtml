@using Class_Homework_2_29_2019.Models
@model IEnumerable<Categories>
@{
	ViewBag.Title = "AddTaskPage";
}


<div class="container" style="margin-top:20px;">
	<div class="row">
		<form method="post" action="~/Home/AddTask">
			<div class="col-md-4 col-md-offset-2">
				<select name="Categoryid" class="form-control">
					@foreach (Categories c in Model)
					{
						<option value="@c.Id">@c.Name</option>
					}
				</select>
				<input type="text" name="Title" placeholder="Task name" class="form-control" />
				<h3>Due Date:</h3>
				<input type="date" class="form-control" name="DueDate" />
				<button class="btn btn-danger">Submit</button>
			</div>
		</form>
	</div>
</div>
